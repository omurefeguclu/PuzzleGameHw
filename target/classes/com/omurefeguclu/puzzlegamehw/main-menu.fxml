    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ImageView fitHeight="92.0" fitWidth="239.0" pickOnBounds="true" smooth="false">
      <image>
         <Image url="@logo-fake.png" />
      </image>
   </ImageView>
   <HBox alignment="CENTER" prefHeight="151.0" prefWidth="318.0" spacing="16.0">
      <children>
         <Button onAction="#rollbackPuzzle"  mnemonicParsing="false" prefHeight="52.0" prefWidth="52.0">
            <graphic>
               <ImageView fitHeight="41.0" fitWidth="37.0" nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@NavigateRightIcon.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
         <AnchorPane fx:id="puzzlesContainer" prefHeight="155.0" prefWidth="130.0">
         </AnchorPane>
         <Button onAction="#advancePuzzle" layoutX="10.0" layoutY="49.0" mnemonicParsing="false" prefHeight="52.0" prefWidth="52.0">
            <graphic>
               <ImageView fitHeight="41.0" fitWidth="37.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@NavigateRightIcon.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
      </children>
   </HBox>
    <Button fx:id="playButton" prefHeight="61.0" prefWidth="139.0" style="-fx-background-color: #F97316; -fx-text-fill: #fff; -fx-background-radius: 20px;" text="Play" textAlignment="CENTER" textFill="WHITE">
      <font>
         <Font name="SansSerif Bold" size="22.0" />
      </font></Button>
</VBox>
